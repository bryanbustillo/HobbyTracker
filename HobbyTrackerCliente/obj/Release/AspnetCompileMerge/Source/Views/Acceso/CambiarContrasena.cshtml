
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CambiarContrasena</title>

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Favicons -->
    <link href="~/Content/img/logoHT1.png" rel="icon">
    <link href="~/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Content/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Content/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="index.html" class="logo d-flex align-items-center w-auto">
                                <img src="~/Content/img/logoHT1.png" style="max-height: 45px">
                                <span class="d-none d-lg-block">Hobby Tracker</span>
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Cambiar contraseña</h5>
                                    <p class="text-center small">Ingresa tu contraseña nueva</p>
                                </div>

                                <form class="row g-3 needs-validation" novalidate action="@Url.Action("CambiarContrasena","Acceso")" method="post">
                                    <input class="form-control" type="hidden" value="@TempData["IDCliente"]" name="IDCliente" />

                                    <div class="col-12">
                                        <label for="inpContrasenaActual" class="form-label">Contraseña actual</label>
                                        <div class="input-group has-validation">
                                            <input type="password" name="contrasenaActual" class="form-control" id="inpContrasenaActual" required value="@ViewData["vContrasena"]">
                                            <div class="invalid-feedback">Por favor ingreso su contraseña actual</div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <label for="inpnuevaContrasena" class="form-label">Contraseña nueva</label>
                                        <div class="input-group has-validation">
                                            <input type="password" name="nuevaContrasena" class="form-control" id="inpnuevaContrasena" required>
                                            <div class="invalid-feedback">Por favor ingreso su contraseña nueva</div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <label for="inpConfirmarContrasena" class="form-label">Confirmar contraseña nueva</label>
                                        <div class="input-group has-validation">
                                            <input type="password" name="confirmarContrasena" class="form-control" id="inpConfirmarContrasena" required>
                                            <div class="invalid-feedback">Por favor confirmar su contraseña nueva</div>
                                        </div>
                                    </div>

                                    @{
                                        if (ViewBag.Error != null)
                                        {
                                            <div class="col-12">
                                                <div class="alert alert-danger" role="alert">
                                                    @ViewBag.Error
                                                </div>
                                            </div>
                                        }
                                    }

                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit" style="background-image: linear-gradient(135deg, rgb(0, 105, 255) 0%, rgb(0, 66, 227) 100%); color: white;">Cambiar contraseña</button>
                                    </div>

                                    <div class="col-12">
                                        <p class="small mb-0"><a href="@Url.Action("Login","Acceso")">Regresar al login</a></p>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>

    </div>

    <script src="~/Content/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/chart.js/chart.umd.js"></script>
    <script src="~/Content/vendor/echarts/echarts.min.js"></script>
    <script src="~/Content/vendor/quill/quill.min.js"></script>
    <script src="~/Content/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Content/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/js/main.js"></script>
</body>
</html>
